var updateStudent=function(studentObj,id)
{
	var query="UPDATE student set ";
	for(var key in studentObj)
	{
		query+=""+key+" ='"+studentObj[key]+"',";
	}
	query=query.slice(0,-1);
	query += " WHERE id = " + id + ";";
	return query;
}

