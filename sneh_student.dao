var selectStudent = function (studentObj) {


	var query = "SELECT * FROM student WHERE ";

	for(var columnName in studentObj){

		query +=" " + columnName + " = '" + studentObj[columnName] + "' and"
	}
	
	query = query.slice(0,-3) + ";";

	return query;
}

